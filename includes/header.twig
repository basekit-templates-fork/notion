<!-- Header -->
<header class="template-header">
	<div class="container">

		<div class="flex-item">
			{{widget('profile', 'header-profile1', { 'profileType':'email' })|raw}}
		</div>
		<div class="flex-item">
			{{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png'), "showTplWidget":"0"})|raw}}
			{{widget('companyname', 'companyname', {
				"business": "profile"
			})|raw}}
		</div>
		<div class="flex-item">
			<div class="template-navigation">

				{{widget('extendednavigation', 'extendednavigation', {"align":"center"})|raw}}

			</div>
		</div>

	</div>
</header>
